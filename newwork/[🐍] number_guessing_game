import random 

print("""
=============================================
            ï¿½ğŸ…¶ğŸ…°ğŸ…¼ğŸ…´: ğŸ…¶ğŸ†„ğŸ…´ğŸ†‚ğŸ†‚ ğŸ†ƒğŸ…·ğŸ…´ ğŸ†‚ğŸ…´ğŸ…²ğŸ†ğŸ…´ğŸ†ƒ ğŸ…½ğŸ†„ğŸ…¼ğŸ…±ğŸ…´ğŸ†       
=============================================

â€¢ ğŸ”® The computer has chosen a number between 1 and 100
â€¢ ğŸ¯ Each round, you must guess 4 different numbers
â€¢ ğŸ’¬ Response: 'âœ… YES' if correct, 'âŒ NO' otherwise
â€¢ â³ Find the number before you run out of attempts

                ğŸš€ Let's Jump In!
=============================================
""")

start_game = input("Do you want to start the game? (y / n): ").strip().lower()
if start_game == "n":
    print("\nğŸ«¤ Alright, maybe next time!")
    quit()

while True:
    secret_number = random.randint(1, 100)

    easy_level = 13
    hard_level = 7
    expert_level = 5

    print("\nğŸš Choose your difficulty level:")
    print("  ğŸŸ¢ 1. Easy (10 attempts)")
    print("  ğŸŸ  2. Hard (7 attempts)")
    print("  ğŸ”´ 3. Expert (5 attempts)")
    print("  ğŸšª 4. Quit the game\n")

    try:
        level_choice = int(input("ğŸ² Your choice (1/2/3/4): "))
    except ValueError:
        print("âŒ Invalid input. Please enter a number between 1 and 4.")
        continue

    if level_choice == 1:
        max_attempts = easy_level
        print("\nğŸŸ¢ You have 10 attempts to find the correct number.")
    elif level_choice == 2:
        max_attempts = hard_level 
        print("\nğŸŸ  You have 7 attempts to find the correct number.")
    elif level_choice == 3:
        max_attempts = expert_level 
        print("\nğŸ”´ You have 5 attempts to find the correct number.")
    elif level_choice == 4:
        print("\nğŸ‘‹ See you next time!")
        quit()
    else:
        print("âŒ Invalid choice. Please try again.")
        continue

    print("\n---------------------------------------------")
    print("ğŸ’¡ Now, you will enter 4 numbers each round.")
    print("ğŸ€ Good luck!")
    print("---------------------------------------------\n")

    attempts = 0
    used_number = set()
    
    while attempts < max_attempts:
        guesses = []

        try:
            for i in range(1, 5):
                while True:
                    number = int(input(f"ğŸ”¢ Enter number {i}/4: "))
                    
                    if number in guesses:
                        print(f"\nğŸ”„ You already entered the number {number} in this round. Try a different one.\n")
                    
                    elif number in used_number:
                        print(f"\nâª You already tried the number {number} in a previous round.")
                        confirm = input("ğŸ¤” Do you still want to use it again? (y/n): ").strip().lower()
                        if confirm == "y":
                            guesses.append(number)
                            used_number.add(number)
                            print(f"âœ”ï¸ {number} accepted.\n")
                            break
                        else:
                            print("ğŸ†— Okay, please choose a different number.\n")
                            continue
                    else:
                        guesses.append(number)
                        used_number.add(number)
                        break
        except ValueError:
            print("âŒ Invalid input. Please enter only numbers.")
            continue

        if secret_number in guesses:
            print("\n" + "="*50)
            print(f"     ğŸ‰ğŸŠ CONGRATULATIONS! You found the number: {secret_number}")
            print(f"     ğŸ“‹ Your guesses this round: {guesses}")
            print("="*50 + "\n")
            break
        else:
            attempts += 1
            print(f"\nâŒ NOPE! The number is not in {guesses}.")
            if attempts < max_attempts:
                print(f"ğŸ’ You have {max_attempts - attempts} attempt(s) left.\n")
            else:
                print("\n" + "="*50)
                print("     ğŸ’€ GAME OVER!")
                print(f"     ğŸ” The secret number was: {secret_number}")
                print("="*50 + "\n")

    print("\n" + "="*50)
    play_again = input("ğŸ”„ Do you want to play again? (y/n): ").strip().lower()
    if play_again != "y":
        print("\nâ¤ï¸ Thanks for playing! See you next time!")
        break
    print("="*50 + "\n")
    print("ğŸ†• Get ready for a new challenge...\n")